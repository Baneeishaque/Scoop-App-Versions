{
    "version": "1.3.1-7.3",
    "description": "Bindings for the libssh2 library",
    "homepage": "https://windows.php.net/",
    "license": {
        "identifier": "PHP-3.01",
        "url": "https://secure.php.net/license/"
    },
    "architecture": {
        "64bit": {
            "url": "https://windows.php.net/downloads/pecl/releases/ssh2/1.3.1/php_ssh2-1.3.1-7.3-ts-vc15-x64.zip",
            "hash": "21c0f94f1e4fb34f759f0c238459293649263244124112e8fe7e95a2cc63baec"
        },
        "32bit": {
            "url": "https://windows.php.net/downloads/pecl/releases/ssh2/1.3.1/php_ssh2-1.3.1-7.3-ts-vc15-x86.zip",
            "hash": "ca63f611f1462f65c523155ec62c4b5c2ca1a6c72711a38e25ed4e0f1830c948"
        }
    },
    "depends": [
        "versions/php73"
    ],
    "post_install": [
        "$phpconfd = \"$persist_dir\\..\\php73\\cli\\conf.d\"",
        "$ini = \"extension=$dir\\php_ssh2.dll\"",
        "if(!(test-path $phpconfd\\ssh2.ini)) {",
        "    Write-Output \"Enabling extension $(Convert-Path $phpconfd)\\ssh2.ini\"",
        "    Add-Content -Value $ini -Path \"$phpconfd\\ssh2.ini\"",
        "} else {",
        "    Write-Host -f Yellow \"PHP 7.3 was not installed through scoop, you have to activate php_ssh2 manually! Add the following:`n\"",
        "    Write-Host -f Cyan \"$ini`n`n\"",
        "}"
    ],
    "post_uninstall": [
        "$phpconfd = \"$persist_dir\\..\\php73\\cli\\conf.d\"",
        "Remove-Item \"$phpconfd\\ssh2.ini\""
    ]
}
