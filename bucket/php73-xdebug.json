{
    "version": "3.1.6-7.3",
    "description": "Xdebug is an extension for PHP, and provides a range of features to improve the PHP development experience.",
    "homepage": "https://xdebug.org/",
    "license": {
        "identifier": "Xdebug-1.01",
        "url": "https://xdebug.org/license.php"
    },
    "architecture": {
        "64bit": {
            "url": "https://xdebug.org/files/php_xdebug-3.1.6-7.3-vc15-x86_64.dll#/php_xdebug.dll",
            "hash": "679ed2942f2b006d42fd4cf76474fcd2cd86a654fdeaa632d440e0288b00f9fc"
        },
        "32bit": {
            "url": "https://xdebug.org/files/php_xdebug-3.1.6-7.3-vc15.dll#/php_xdebug.dll",
            "hash": "c655126df664351c84b69e394340d84b9b546d0a162fedd354f4a440754351c1"
        }
    },
    "depends": [
        "versions/php73"
    ],
    "post_install": [
        "$phpconfd = \"$persist_dir\\..\\php73\\cli\\conf.d\"",
        "$ini = \"zend_extension=$dir\\php_xdebug.dll`n[xdebug]`nxdebug.mode=debug`nxdebug.start_with_request=yes`nxdebug.discover_client_host=true\"",
        "if(!(test-path $phpconfd\\xdebug.ini)) {",
        "    Write-Output \"Enabling extension $(Convert-Path $phpconfd)\\xdebug.ini\"",
        "    Add-Content -Value $ini -Path \"$phpconfd\\xdebug.ini\"",
        "} else {",
        "    Write-Host -f Yellow \"PHP 7.3 was not installed through scoop, you have to activate php_xdebug.dll manually! Add the following:`n\"",
        "    Write-Host -f Cyan \"$ini`n`n\"",
        "}"
    ],
    "post_uninstall": [
        "$phpconfd = \"$persist_dir\\..\\php73\\cli\\conf.d\"",
        "Remove-Item \"$phpconfd\\xdebug.ini\""
    ],
    "checkver": {
        "url": "https://xdebug.org/download/historical",
        "regex": "php_xdebug-([\\d.]+-7.3)-vc15-x86_64.dll"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://xdebug.org/files/php_xdebug-$version-vc15-x86_64.dll#/php_xdebug.dll"
            },
            "32bit": {
                "url": "https://xdebug.org/files/php_xdebug-$version-vc15.dll#/php_xdebug.dll"
            }
        },
        "hash": {
            "url": "https://xdebug.org/download/historical",
            "regex": "([a-fA-F0-9]{64}).+?$basename"
        }
    }
}
